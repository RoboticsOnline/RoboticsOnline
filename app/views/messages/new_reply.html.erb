<div id="main-content" class="container">
  <div class="row">

    <div class="siderbar">

      <%= render'sidebar'%>

    </div>

    <div id="main" class="main-content span9">
      <div class="row">
          <div class="span4 offset3">
            <h1>Reply message to <%= @reply_message.from_user %></h1>
            <%= form_for :message do |f| %>
              
              <% if @reply_message.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(@reply_message.errors.count, "error") %> prohibited this message from being sent:</h2>

                  <ul>
                  <% @reply_message.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                  </ul>
                </div>
              <% end %>
              
              <div class="field">
                <%= f.label :title %><br>
                <%= f.text_field :title, :value => "RE: #{@reply_message.title}"%>
              </div>
              <div class="field" class="example">
                <%= f.label :content %><br>
                <%= f.text_area :content, :size => "20x12" %>
              </div>
              <div class="actions">
                <%= f.submit "Send", :class => 'btn btn-success'  %>
              </div>
            <% end %>

            <%= link_to 'Back', messages_path, :class => 'btn btn-success'%>
          </div>
       </div>
    </div>          
  </div>
</div>
