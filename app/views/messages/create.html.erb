<div id="main-content" class="container">
  <div class="row">

    <div class="siderbar">

      <%= render'sidebar'%>

    </div>

    <div id="main" class="main-content span9">
      <div class="row">
          <div class="span6 offset3">
            <h3>Your message was successfully sent</h3>
            <h4>Message information</h4>
        
        <p>
          <strong>Recipient:</strong>
          <%= @message.to_user %>
        </p>

        <p>
          <strong>Title:</strong>
          <%= @message.title %>
        </p>

        <p>
          <strong>Content:</strong> <br/>
          <%= @message.content %>
        </p>
           <%= link_to 'Back', messages_path, :class => 'btn btn-success'%>
          </div>
       </div>
    </div>          
  </div>
</div>
