					<div class="item empty"></div><!-- /item -->
					<div class="item empty"></div><!-- /item -->
					<div class="item empty"></div><!-- /item -->
				</div><!-- /equipment -->
				<div class="inventory span6">
					<h4 class="section-title">Inventory</h4>
						<div class="item empty"></div><!-- /item -->
						<div class="item empty"></div><!-- /item -->
						<div class="item empty"></div><!-- /item -->
