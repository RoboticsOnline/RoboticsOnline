<aside id="sidebar" class="span3">

	<div class="btn-group wide-fat">
		<button class="btn btn-large">Dashboard</button>
		<button class="btn btn-large btn-primary dropdown-toggle" data-toggle="dropdown">
		<span class="caret"></span>
		</button>
		<ul class="dropdown-menu">
			<li><%= link_to "Battlefield", battlefield_path %></li>
			<li><%= link_to "Messages", messages_path %></li>
			<li><%= link_to "General Shop ", general_shop_path %></a></li>
			<li><%= link_to "Consumables Shop", consumables_shop_path %> </a></li>
			<li><%= link_to "VipZone", vipzone_path %> </a></li>
			<li><%= link_to "Search", search_path %> </a></li>
			<li><%= link_to "Fight", fight_path %> </a></li>
		</ul>
	</div>

	<div class="user-info">
		<h2 class='user-name'> <%= current_user.username%> </h2>
		<h4 class="user-level">Level: <%= current_user.robot.level%> </h4>
		<% if current_user.robot.unused_talent_points > 0 %>
			<div style="display: inline;">
				<span class="label label-warning" id="unused_talent_points"> +<%= current_user.robot.unused_talent_points%> </span>
			</div>
		<% end %>
	</div>

	<div class="profile-image">
		<img src="/assets/user/<%= current_user.picture%>" alt="">
	</div>
	<div class='progress-bar'>
		<div class="progress progress-danger progress-striped active" id="health">
			<div class="bar" style="width:<%= x = current_user.robot.current_health.to_f / current_user.robot.max_health.to_f * 100.0 %>%;" >
				<%= current_user.robot.current_health %>
			</div> 
		<small class='pull-right'><%= current_user.robot.max_health %></small>
		</div>
	</div><!-- /progress-bar -->
	<div class="stats">

		<%= render'stats'%>

	</div>
</aside><!-- /sidebar -->