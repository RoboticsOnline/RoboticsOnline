<div id="main-content" class="container">
  <div class="row">
    <div class="siderbar">
      <%= render'sidebar'%>
    </div>

    <div id="main" class="main-content span9">
        <div class="row">
         	<div class="span6 offset3">				
				<h1>Message information</h1>
				<p>
				  <strong>Recipient:</strong>
				  <%= @message.to_user %>
				</p>
				<p>
				  <strong>Title:</strong>
				  <%= @message.title %>
				</p>
				<p>
				  <strong>Published at:</strong>
				  <%= @message.published_at %>
				</p>
				<p>
				  <strong>Content:</strong> <br/>
				  <%= @message.content %>
				</p>
				<%= link_to 'Back', messages_outbox_path, :class => 'btn btn-success'%>          	
    	   	</div>
        </div>
    </div>          
  </div>
</div>



