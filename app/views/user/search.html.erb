<div id="main-content" class="container">
  <div class="row">

    <div class="siderbar">

      <%= render'sidebar'%>

    </div>

    <div id="main" class="main-content span9">
        <div class="row">
        	<div class="offset1">
	        	<%= form_tag("", method: "post") do  %>
	        		<%= label_tag(:q, "Search for:") %>
					<%=text_field_tag "name",nil, class:"span5 search-query", placeholder:"Search..."  %>
					<%=submit_tag ("Search") , class:"btn" %>
				<% end %>

				<table class="table" style="margin-top: 30px">
					<% if not @users.nil? %>
						<tr>
							<th> N: </th>
							<th class="list_name">Username</th>
							<th class="list_name">Level</th>
						</tr>						
						<% rank = 0 %>
						 <% @users.each do |user| %>
							<tr>
								<td> <%= rank += 1 %> </td>
							    <td class="list_name">
				                 	<%= link_to user.username, show_user_path({username: user.username}) %>
				                </td>
				                <td> <%= user.robot.level %> </td>
							</tr>		              	  
			              <% end %>
		            <% end %>
		        </table>
	    	</div>
        </div>
    </div>          
  </div>
</div>




